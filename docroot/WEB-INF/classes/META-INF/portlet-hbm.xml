<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false">
	<import class="com.telefonica.model.Department" />
	<import class="com.telefonica.model.Employer" />
	<class name="com.telefonica.model.impl.DepartmentImpl" table="manageEmployer_Department">
		<cache usage="read-write" />
		<id name="idDept" type="int">
			<generator class="increment" />
		</id>
		<property name="nameDept" type="com.liferay.portal.dao.orm.hibernate.StringType" />
	</class>
	<class name="com.telefonica.model.impl.EmployerImpl" table="manageEmployer_Employer">
		<cache usage="read-write" />
		<id name="idEmployer" type="int">
			<generator class="increment" />
		</id>
		<property name="nameEmployer" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="idDept" type="com.liferay.portal.dao.orm.hibernate.IntegerType" />
		<property name="photo" type="com.liferay.portal.dao.orm.hibernate.StringType" />
	</class>
</hibernate-mapping>